.header {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 0 0;
  border-bottom: 1px solid #f4f4f4;
  font-size: 27rpx;
  color: #555;
}	

.product {
  display: flex;
  align-items: center;
  height: 180rpx;
  border-bottom: 6rpx solid #f4f4f4;
 
  padding: 6rpx 8rpx;
}

.product .img {
  height: 145rpx;
  width: 145rpx;
  background-color: #f4f4f4;
}


.product .title {
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product .specDesc {
  color: #999;
  font-size: 25rpx;
  padding:10rpx 20rpx ;
}

