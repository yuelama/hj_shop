/* hj_shop/pages/user/user.wxss */
#userhead {
  padding: 40rpx 0rpx 30rpx 70rpx;
  background-color: #C8C8CD;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding: 0rpx 0rpx 100rpx 50rpx;
  color: blanchedalmond;
  font-size: 20px;
  position: relative;
  bottom: 50rpx;
}

#other {
  margin: 40rpx 0px;
}

#addr {
  line-height: 30px;
  margin: 10rpx 0px;
  padding: 20rpx 0px 20rpx 100rpx;
  border: solid #ccc 1px;
  border-left: none;
  border-right: none;
  background-color: white;
  /* background-image: url(../../image/address.png); */
  background-repeat: no-repeat;
  background-position: 20rpx center;
}

#order {
  margin: 30rpx 0px;
  background-color: white;
  border-top: solid #ccc 1px;
}

.order-item {
  line-height: 30px;
  padding: 20rpx 0px 20rpx 100rpx;
  border-bottom: 1px #ccc solid;
  background-color: white;
  background-repeat: no-repeat;
  background-position: 15rpx 25rpx;
}

.more {
  background: url(../../image/bigmore.png) no-repeat 19rpx 1px;
  float: right;
  height: 80rpx;
  width: 100rpx;
}

.order-wrap {
  margin: 20rpx 0;
  height: 240rpx;
  background: #fff;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
}

.order-header .right {
  display: flex;
  align-items: center;
}

.order-header .txt {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.order-header .all {
  color: #666;
  font-size: 25rpx;
  margin-right: 10rpx;
}

.order-header .arrow {
  width: 13rpx;
  height: 25rpx;
}

.order-icon {
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-icon .icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 120rpx;
}

.icon-wrap .icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.icon-wrap .txt {
  color: #666;
  font-size: 25rpx;
}

.icon-wrap .num {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
