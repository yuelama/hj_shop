	          </i-badge>
	          <text class="txt">未付款</text>
	        </view>
	
	        <view class="icon-wrap" id="2" bindtap="toOrder">
	          <i-badge count="{{order.toSend}}">
	            <image class="icon" src="/images/temp/toSend.png"></image>
	          </i-badge>
	          <text class="txt">已付款</text>
	        </view>
	
	        <view class="icon-wrap" id="3" bindtap="toOrder">
	          <i-badge count="{{order.send}}">
	            <image class="icon" src="/images/temp/send.png"></image>
	          </i-badge>
	          <text class="txt">待评价</text>
	        </view>
	
