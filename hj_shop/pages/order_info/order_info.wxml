<!-- 订单列表 -->
<van-tabs color="#b4282d" active="{{active}}" tab-class="tab" swipe-threshold="4" swipeable bind:change="changeTab" class="nav">	
	<van-tab title="全部"></van-tab>
	<van-tab title="未付款"></van-tab>
	<van-tab title="已付款"></van-tab>
	<!-- <van-tab title="已发货"></van-tab> -->
	<van-tab title="待评价"></van-tab>
</van-tabs>

<!-- 加载中 -->
<view wx:if="{{loading}}" class="loading-center">
	<van-loading type="spinner" />
</view>

<!-- 无订单 -->
<view class="no-order" wx:if="{{orderList.length == 0&&!loading}}">
	<image class="img" src="/images/temp/noOrder.png"></image>
	<view class="txt">还没有任何订单呢</view>
</view>


<scroll-view bindscrolltolower="scrollListen" scroll-y enable-flex class="orders" wx:if="{{orderList.length > 0&&!loading}}">
	<view style="margin-top:1rpx"></view>
	<!-- 订单 -->
	<view class="order" wx:for="{{orderList}}" wx:key="{{item.id}}">
		  
		<view class="header">
			<view class="order-id">订单编号：{{item.order_no}}</view>
			<!-- <view  class="cancel" data-value="{{item}}" data-index="{{index}}" bindtap="cancelOrder">取消订单</view>
      <image class="delete" src="/images/temp/delete.png" data-value="{{item}}" bindtap="deleteOrder"></image> -->
		</view>

		<view class="product" wx:key="{{item.id}}" data-value="{{item}}" bindtap="toOrderDetail">
			<image class="img" src="{{item.order_img_url}}"></image>
			<view class="info">
				<text class="title">{{item.order_name}}</text>
				<text class="specDesc">{{item.order_num}}</text>
				<!-- <text class="specDesc">{{item.order_num}}</text> -->
			</view>
			<view class="status">
				<text class="package">包裹{{index+1}}</text>
			    <!-- <text class="txt" wx:if="{{item.status==0}}">全部订单</text> -->
				<text class="txt" wx:if="{{item.status==1}}">未付款</text>
				<text class="txt" wx:if="{{item.status==2}}">已付款</text>
				<text class="txt" wx:if="{{item.status==3}}">待评价</text>
				<!-- <text class="txt-success" wx:if="{{item.status==2||item.status==3}}">交易成功</text> -->
			</view>

		</view>

		<view class="foot" wx:if="{{item.stauts != 0}}">
			<view class="money">
				<text>应付：￥{{item.order_price}}</text>
				<!-- <text >实付：￥{{item.actualPrice}}</text> -->
			</view>
			<view class="btns">
				<van-button data-value="{{item}}" data-index="{{index}}" wx:if="{{item.status==1}}" color="#b4282d" size="small"
				 class="btn" bindtap="toPay">去付款
				</van-button>

				<van-button data-value="{{item}}" data-index="{{index}}" wx:if="{{item.status==2}}" plain type="default" size="small"
				 class="btn" bindtap="buyAgain">再次购买</van-button>
				<van-button data-value="{{item}}" data-index="{{index}}" wx:if="{{item.status==3}}" plain type="default" size="small"
				 class="btn" bindtap="toComment">立即评价</van-button>
			</view>
		</view>

	</view>
</scroll-view>


<van-dialog confirm-button-color="#b4282d" id="van-dialog" />
